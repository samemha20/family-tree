<!doctype html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title><%= page.title %> - شجرة العائلة</title>

  <script src="/theme.js"></script>
  <link rel="stylesheet" href="/styles.css"/>
</head>
<body>

<%- include('partials/header', {
  active: 'about',
  title: page.title,
  subtitle: page.subtitle
}) %>

<main class="pageWrap">

  <section class="hero">
    <h1 class="heroTitle"><%= page.title %></h1>
    <p class="heroSub"><%= page.subtitle %></p>
  </section>

  <section class="panel" style="margin-top:14px;">
    <div class="panelHeader">
      <h2 class="panelTitle">نبذة عن العائلة</h2>
      <span class="badge">توثيق • تاريخ</span>
    </div>
    <div class="panelBody">
      <div class="p">
        <%- page.content %>
      </div>
    </div>
  </section>

</main>

</body>
</html>
